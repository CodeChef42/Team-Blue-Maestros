{
  "manifest_version": 3,
  "name": "CrisisGuard Local Connector",
  "description": "Set local detection rates and receive CrisisGuard alerts from the local agent.",
  "version": "1.0",
  "icons": {
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "CrisisGuard"
  },
  "permissions": ["storage", "notifications", "scripting"],
  "host_permissions": ["http://127.0.0.1/*", "http://localhost/*"],
  "background": {
    "service_worker": "background.js"
  }
}
